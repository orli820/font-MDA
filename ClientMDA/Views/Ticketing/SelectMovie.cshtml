<script src="~/assets/js/main.js"></script>
<script>
    const selectMovie = document.querySelector("#SelectMovie")
    const selectTheater = document.querySelector("#SelectTheater")
    const View = document.querySelector("#partialView")

    $('#partialView').load('@Url.Action("MoviePartialView")')

    selectTheater.addEventListener("click", () => {
        $('#partialView').load('@Url.Action("SelectPartialView")')
        console.log("click")
        View.load('@Url.Action("SelectPartialView")')
    })

    selectMovie.addEventListener("click", () => {
        $('#partialView').load('@Url.Action("MoviePartialView")')
        console.log("click")
    })
</script>

