<section class="container m-auto pb-1" style="padding-top:5%">
    <div class="row mb-3 justify-content-center">
        <div class="col-md-4 themed-grid-col font-weight-bolder" style="font-size: 50px; text-align: center; cursor: pointer;" id="SelectMovie">選擇電影</div>
        <div class="col-md-4 themed-grid-col font-weight-bolder" style="font-size: 50px; text-align: center; cursor: pointer;" id="SelectTheater">選擇影院</div>
    </div>

    <div class="container-sm m-auto pt-0" id="partialView">

    </div>


